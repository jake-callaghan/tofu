Program (Main (Seq [LocalVarDecl (tony, Dog);
                     Assign (tony, New Dog);
                     LocalVarDecl (ricky, Puppy);
                     Assign (ricky, New Puppy);
                     WhileStmt (Call (Call (Variable ricky, cuteness, []),
                                       isGreaterThan,
                                       [Number 0]),
                                 Seq [Call (Variable ricky, ruinCarpet, []);
                                       Skip]);
                     Print (Call (Variable ricky, cuteness, []));
                     Print (Call (Variable tony, greet, [Variable ricky]));
                     Skip]),
          [ClassDecl (Animal,
                       Object,
                       [InstanceVarDecl (age, Integer);
                         InstanceVarDecl (cuteness, Integer);
                         MethDecl (init,
                                    Unit,
                                    [],
                                    Seq [Assign (age, Number 0);
                                          Assign (cuteness, Number 0);
                                          Skip]);
                         MethDecl (haveBirthday,
                                    Unit,
                                    [],
                                    Seq [Assign (age,
                                                  Call (Variable age,
                                                         add,
                                                         [Number 1]));
                                          Skip]);
                         MethDecl (age,
                                    Integer,
                                    [],
                                    Seq [Return (Variable age); Skip]);
                         MethDecl (cuteness,
                                    Integer,
                                    [],
                                    Seq [Return (Variable cuteness); Skip]);
                         MethDecl (greet,
                                    Integer,
                                    [Formal (a, Animal)],
                                    Seq [Return (Call (Variable cuteness,
                                                        add,
                                                        [Call (Variable a,
                                                                cuteness,
                                                                [])]));
                                          Skip])]);
            ClassDecl (Dog,
                        Animal,
                        [MethDecl (init,
                                    Unit,
                                    [],
                                    Seq [Assign (age, Number 1);
                                          Assign (cuteness, Number 8);
                                          Skip])]);
            ClassDecl (Puppy,
                        Dog,
                        [MethDecl (init,
                                    Unit,
                                    [],
                                    Seq [Assign (age, Number 0);
                                          Assign (cuteness, Number 1000);
                                          Skip]);
                          MethDecl (ruinCarpet,
                                     Unit,
                                     [],
                                     Seq [Assign (cuteness,
                                                   Call (Variable cuteness,
                                                          minus,
                                                          [Number 250]));
                                           Skip])])])
