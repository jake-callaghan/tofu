#!/bin/bash

echo "===== BUILDING TOFU COMPILER ====="

rm -f .depend

echo "[generating dependendcies]"
ocamldep * > .depend

echo "[beginning compilation]"
echo "[creating lexer]"
ocamllex lexer.mll
echo "[creating parser]"
ocamlyacc parser.mly

ocamlc -c print.mli source.mli keiko.mli tree.mli env.mli lib.mli typecheck.mli kgen.mli parser.mli

echo "[compiling source files]"
ocamlc -c -w -10 -w -3 -w -26 print.ml source.ml keiko.ml lexer.ml tree.ml errors.ml object.ml integer.ml boolean.ml env.ml lib.ml typecheck.ml kgen.ml parser.ml
ocamlc -c tofuc.ml

echo "[building executable]"
ocamlc -o tofuc print.cmo source.cmo keiko.cmo tree.cmo errors.cmo env.cmo lib.cmo object.cmo integer.cmo boolean.cmo typecheck.cmo kgen.cmo lexer.cmo parser.cmo tofuc.cmo

echo "[finished]"
